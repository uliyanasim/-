просто  метод switch, но нужно не это
using System.Linq;
using System.Text;

namespace Симонова
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите символ ('+' или '-' или '*' или '/')");
            string simvol = Console.ReadLine();

            sw1(simvol);

            Console.ReadLine();
        }

        // Данный метод выводит выбор пользователя
        static void sw1(string s)
        {
            switch (s)
            {
                case "+":
                    Console.WriteLine("плюс");
                    break;
                case "-":
                    Console.WriteLine("минус");
                    break;
                case "*":
                    Console.WriteLine("умножение");
                    break;
                case "/":
                    Console.WriteLine("делание");
                    break;
                default:
                    Console.WriteLine("Вы ввели неверный символ");
                    break;
            }
        }
    }
}

